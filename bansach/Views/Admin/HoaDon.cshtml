@model IEnumerable<bansach.Models.DonDatHang>

@{
    ViewBag.Title = "HoaDon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DANH SÁCH HÓA ĐƠN</h2>


<table class="table">
    <tr>
        <th>
            Mã hóa đơn
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("CTHoaDon","Admin", new {MaGioHang=item.MaGioHang})">
                @Html.DisplayFor(modelItem => item.MaGioHang)
            </a>            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.HoVaTenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiao)
        </td>
    </tr>
}

</table>
