
@{
    ViewBag.Title = "SPTheoTheLoai";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center;color:red">Sách theo thể loại </h2>
<div class="row">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("ChiTiet", "BookStore", new { id = sach.MaSach })">
                    <img alt="@sach.TenSach" src="~/HinhSanPham/@sach.BiaSach"height="200" width="100" />
                    <div>
                        <br />
                        <h4 style="text-align:center">@sach.TenSach</h4>
                        <p></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">@sach.GiaBan VND</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
            </div>
        </div>

    }

</div>

