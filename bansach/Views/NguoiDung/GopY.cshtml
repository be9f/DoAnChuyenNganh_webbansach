
@{
    ViewBag.Title = "GopY";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 style="text-align:left">GÓP Ý</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ và tên:</td>
            <td>@Html.TextBox("TenKH")@ViewData["Loi1"]</td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>@Html.TextBox("Diachi")@ViewData["Loi2"]</td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>@Html.TextBox("Email")@ViewData["Loi3"]</td>
        </tr>
        <tr style="height:40px">
            <td>Ý kiến của bạn:</td>
            <td>@Html.TextBox("NoiDungGopY")@ViewData["Loi4"]</td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="GỬI"></td>
        </tr>
    }
</table>

