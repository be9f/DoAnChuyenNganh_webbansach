
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ và tên:</td>
            <td>@Html.TextBox("HotenKH")@ViewData["Loi1"]</td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN")@ViewData["Loi2"]</td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>@Html.Password("Matkhau")@ViewData["Loi3"]</td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu:</td>
            <td>@Html.Password("Matkhaunhattrlai")@ViewData["Loi4"]</td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>@Html.TextBox("Email")@ViewData["Loi5"]</td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>@Html.TextBox("DiaChi")</td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>@Html.TextBox("Dienthoai")@ViewData["Loi6"]</td>
        </tr>

        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td><input type="date" name="Ngaysinh"></td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="ĐĂNG KÝ"></td>
        </tr>
    }
</table>

